<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style/style.css">

</head>
<body>
    <header>
        <a href="/">Home</a>
        <a href="/searchpage">Search</a>
        <a href="/list">List</a>
    </header>
    <main id="detailsmain">

        <div id="detailscontainer">
           
            <%details.forEach(item=>{%>
                <div id="detailscard">

                    <h1>
                        <%=item.title %>
                    </h1>
                    <p>
                        <%=item.company%>
                    </p>
                    <p>
                        <%=item.location %>
                    </p>
                    <p>
                        <%=item.url %>
                    </p>
                <form action="/delete/<%=item.id%>?_method=DELETE" id="deleteform" method=post>
                <input type="submit" value="Delete">
                </form>
                
                <button id="updateBtn">Update</button>
                <form action="/update/<%=item.id%>?_method=PUT" id="updateform" method="post">
                    <input type="text" name="title" value="<%=item.title%>">
                    <input type="text" name="company" value="<%=item.company%>">
                    <input type="text" name="location" value=" <%=item.location %>">
                    <input type="text" name="url" value="<%=item.url %>">
                    <input type="submit" value="Update">
                </form>
                </div>
              
            <%})%>
        </div>

    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $('#updateform').hide();
        $('#updateBtn').on('click',function(){
            $('#updateform').toggle();
        })
       
    </script>
</body>
</html>